  %body.landing
    / Page Wrapper
    #page-wrapper
      / Header
      %header#header.alt
      / One
      %section#one.wrapper.alt.style2
        - apps_list.each do | app_name, app |
          %section.spotlight
            .image
              %a{ href: "#{ app[ :kind ] }/#{ app_name }"}
                %img{ :alt => "", :src => "/apps_images/#{ app_name }.jpg" }/
            .content
              %a{ href: "#{ app[ :kind ] }/#{ app_name }"}
                %h2= app[ 'title' ]
              %p= app[ 'message' ]
              %ul.actions
                %li
                  %a.button.big{ href: app[ :link ] } Download
